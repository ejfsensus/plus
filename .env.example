# Railway Environment Variables
# API Service
CONSOLE_API_URL=${{API.RAILWAY_PUBLIC_DOMAIN}}
SERVICE_API_URL=${{API.RAILWAY_PUBLIC_DOMAIN}}
APP_API_URL=${{API.RAILWAY_PUBLIC_DOMAIN}}

# Web Service
CONSOLE_WEB_URL=${{WEB.RAILWAY_PUBLIC_DOMAIN}}
APP_WEB_URL=${{WEB.RAILWAY_PUBLIC_DOMAIN}}

# Database (Railway PostgreSQL)
DB_HOST=${{Postgres.RAILWAY_PRIVATE_DOMAIN}}
DB_PORT=${{Postgres.RAILWAY_PORT}}
DB_USERNAME=${{Postgres.PGUSER}}
DB_PASSWORD=${{Postgres.PGPASSWORD}}
DB_DATABASE=${{Postgres.PGDATABASE}}

# Redis (Railway Redis)
REDIS_HOST=${{Redis.RAILWAY_PRIVATE_DOMAIN}}
REDIS_PORT=${{Redis.RAILWAY_PORT}}
REDIS_PASSWORD=${{Redis.REDIS_PASSWORD}}

# Security
SECRET_KEY=your-secret-key-here

# Other required variables
DEPLOY_ENV=PRODUCTION
EDITION=SELF_HOSTED
VECTOR_STORE=weaviate
STORAGE_TYPE=opendal
OPENDAL_SCHEME=fs